{{!< main}} <h1>Carrito de Compras</h1>

    {{#if user.cart.length}}
    <table class="table">
        <thead>
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            {{#each user.cart}}
            <tr>
                <td>{{this.product.name}}</td>
                <td>{{this.quantity}}</td>
                <td>{{this.product.price}} USD</td>
                <td>{{multiplicar this.product.price this.quantity}} USD</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    {{else}}
    <p>Tu carrito está vacío.</p>
    {{/if}}
    <button class="btn btn-success">Finalizar la Compra</button>